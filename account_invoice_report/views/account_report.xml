<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QWeb Reports -->
        <record id="account_invoices" model="ir.actions.report">
            <field name="name">Invoices (table)</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_invoice_report.report_invoice</field>
            <field name="report_file">account_invoice_report.report_invoice</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
 (4, ref('account.group_account_readonly'))]"/>
        </record>

        <template id="report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.internal_layout">
                        <t t-set="o_ua" t-value="o.with_context(lang=uk_UA)"/>
                        <t t-set="o_en" t-value="o.with_context(lang=en_US)"/>
                        <i>Invoice /Інвойс № <t t-out="o_ua.name"/></i>
                        <table>
                            <tbody>
                                <tr>
                                    <td style="width: 50%;">
                                        <i>Date of invoice: <t t-out="o_en.invoice_date"/></i>
                                    </td>
                                    <td style="width: 50%;">
                                        <i>Дата інвойса: <t t-out="o_ua.invoice_date"/></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
